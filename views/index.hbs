<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Search</title>
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=poppins:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="app.css" />

  </head>
  <body class="bg">

    <div
      class="container d-flex justify-content-center flex-column align-items-center h-100"
    >
      <br /><br />

      <div class="card bg-white rounded-5 shadow-3 w-100">

        <div
          class="d-flex flex-column flex-lg-row justify-content-center align-items-center"
        >
          <div class="col-12 col-lg-5">
            <h3 class="fw-semibold mt-3 ms-3 p-2">User Filter System</h3>
          </div>
          <div class="col-12 col-lg-7">
            <div class="d-flex flex-row justify-content-end">
              <div class="d-flex justify-content-center">
                <div class="d-flex">
                  <input
                    class="searchInput me-0"
                    type="text"
                    placeholder="Search By.. & Enter"
                    aria-label="Search"
                    id="search"
                  />
                  <select
                    class="searchSelect me-3 w-75"
                    id="searchBy"
                    aria-label="Default select example"
                  >
                    <option selected value="userFirstName">First Name</option>
                    <option value="userLastName">Last Name</option>
                    <option value="userEmail">Email</option>
                    <option value="userPhone">Mobile</option>
                  </select>
                </div>
              </div>
              <!-- filter by -->
              <div class="d-flex justify-content-center">
                <form class="d-flex">
                  <select
                    class="select me-3 w-100"
                    id="filterBy"
                    aria-label="Default select example"
                  >
                    <option selected disabled>Order By</option>
                    <option value="userFirstName-ascending">A-Z Order First Name</option>
                    <option value="userFirstName-descending">Z-A Order First
                      Name</option>
                    <option value="userLastName-ascending">A-Z Order Last Name</option>
                    <option value="userLastName-descending">Z-A Order Last Name</option>
                    <option value="totalMarks-ascending">Low to High Total Marks</option>
                    <option value="totalMarks-descending">High to Low Total
                      Marks</option>
                    <option value="clear">Clear Filter</option>
                  </select>
                </form>
              </div>
              <div class="d-flex justify-content-center">
                <form class="d-flex">
                  <select
                    class="select me-3 w-100"
                    id="filterByCourse"
                    aria-label="Default select example"
                  >
                    <option selected disabled>Filter By Course</option>

                  </select>
                </form>
              </div>
            </div>
          </div>
        </div>

        <div class="table-responsive mb-0">
          <table class="table align-items-center table-flush">
            <thead class="thead-light">
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th class="col">Gender</th>
                <th scope="col">Course</th>
                <th scope="col">Emai</th>
                <th scope="col">Phone</th>
                <th scope="col">City</th>
                <th scope="col">Total Marks</th>
                <th scope="col">Status</th>
              </tr>
            </thead>
            <tbody id="tableBody">

            </tbody>
          </table>
        </div>

        <!-- pagination -->
        <div class="d-flex justify-content-between">
          <nav aria-label="Page navigation example">
            <ul class="pagination" id="pagination">

            </ul>
          </nav>

          <div
            class="d-flex flex-row gap-3 justify-content-center align-items-center me-3"
          >
            <label style="font-size: 0.7rem;">Result Per Page</label>
            <select class="select" id="pagePer">
              <option value="10" selected>10</option>
              <option value="20">20</option>
              <option value="30">30</option>
              <option value="40">40</option>
              <option value="50">50</option>
            </select>
          </div>
        </div>

      </div>
    </div>

    <!-- MDB -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.umd.min.js"
    ></script>
    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script src="app.js"></script>
  </body>
</html>